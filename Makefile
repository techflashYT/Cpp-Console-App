#=========================================================================================
# Set basic stuff up.
#=========================================================================================
NAME			:= test
TARGET			:= $(notdir $(NAME).exe)

#=========================================================================================
# Set up C++ Compiler and flags.
#=========================================================================================
CPPC			:= g++
CFLAGS			:= -O3 -Wall -Wextra -Werror -std=c++2b


#=========================================================================================
# Set up output stuff.
#=========================================================================================


export OUTPUT	:= bin/$(TARGET)


#=========================================================================================
# Compile.
#=========================================================================================
compile:
	@pwsh -C "if (Test-Path -Path bin) {} else { mkdir bin }"
	$(CPPC) $(CFLAGS) src/*.cpp -o "$(OUTPUT)"
